<!-- Page Wrapper -->
<div class="page-wrapper">
	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Add Responsibilty</h3>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
						<li class="breadcrumb-item active">Responsibilty/Add Responsibilty</li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
                  <% if flash[:error] %>
                           <div class="alert <% if session[:isErrorhandled].to_i >0 %>alert-danger<% else %>alert-success<% end %>" style="width:900px;" id="successXMessage">
                             <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                             <%= flash[:error] %>
                           </div>
                          <% end %>
                <%= form_tag({:action=>'create'} ,:multipart=>true,:id=>:myforms ) do  %>
                <input type="hidden" name="currespcode" id="currespcode" value="<% if @ListRespns %><%=@ListRespns.rsp_rspcode%><% end %>"/>
                <input type="hidden" name="mid" id="mid" value="<% if @ListRespns %><%=@ListRespns.id%><% end %>"/>
		<div class="row">
			<div class="col-md-12">
			
				<div class="form-group row">
					<label class="col-form-label col-md-2">Responsibilty Code</label>
					<div class="col-md-3">
                                          <input type="text" class="form-control" required maxlength="30" readonly autocomplete="off" name="rsp_rspcode" id="rsp_rspcode" value="<% if @ListRespns %><%=@ListRespns.rsp_rspcode%><% elsif @lastcodes %><%=@lastcodes%><% end %>"/> </div>
						<label class="col-form-label col-md-2">Description</label>
					<div class="col-md-3">
						<input type="text" class="form-control" maxlength="70" autocomplete="off" name="rsp_description" id="rsp_description" value="<% if @ListRespns %><%=@ListRespns.rsp_description%><% end %>"/> </div>
				</div>

				<div class="submit-section">
					<button class="btn btn-primary submit-btn">Save</button>
					<a href="<%=root_url%>responsibility"><button class="btn btn-danger submit-btn m-l-5 " type="button">Quit</button></a>
				</div>
			</div>
		</div>
              <% end %>
	</div>
	<!-- /Page Content -->
</div>