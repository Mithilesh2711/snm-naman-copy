<!-- Page Wrapper -->
<div class="page-wrapper">
	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Add Zone District</h3>
					<%=render'layouts/breadcrumbs'%>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
                 <% if flash[:error] %>
                           <div class="alert <% if session[:isErrorhandled].to_i >0 %>alert-danger<% else %>alert-success<% end %>" style="width:900px;" id="successXMessage">
                             <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                             <%= flash[:error] %>
                           </div>
                          <% end %>
                        <%= form_tag({:action=>'create'} ,:multipart=>true,:id=>:myforms ) do  %>
                        <input type="hidden" name="cur_description" id="cur_description" value="<% if @ListDist %><%=@ListDist.zd_name%><% end %>"/>
                        <input type="hidden" name="mid" id="mid" value="<% if @ListDist %><%=@ListDist.id%><% end %>"/>
                        <div class="row">
			<div class="col-md-12">
				
				<div class="form-group row">
					
					<label class="col-form-label col-md-2">District Code</label>
					<div class="col-md-3">
                                          <input type="text" class="form-control" readonly="" maxlength="25" autocomplete="off" name="zd_distcode" id="zd_distcode" value="<% if @ListDist %><%=@ListDist.zd_distcode%><% else %><%=@lastNumber%><% end %>" />
                                        </div>
						<label class="col-form-label col-md-2">Zone<span class="mandatory">*</span></label>
					<div class="col-md-3">
						<select class="form-control" required name="zd_zonecode" id="zd_zonecode">
					<option value="">-Select-</option>
                                        <%
                                          if @ListZone && @ListZone.length >0
                                           @ListZone.each do |newzone|
                                        %>
                                        <option value="<%=newzone.zn_zonecode%>" <% if @ListDist && @ListDist.zd_zonecode.to_s.downcase == newzone.zn_zonecode.to_s.downcase%>selected="selected"<% end %>><%=newzone.zn_name%></option>
                                        <%

                                         end
                                       end
                                       %>
				</select>
					</div>
						
				</div>
					<div class="form-group row">
					
					
						
						<label class="col-form-label col-md-2">District Name <span class="mandatory">*</span></label>
					<div class="col-md-3"><input type="text" tabindex="3" maxlength="80" class="form-control" name="zd_name" id="zd_name" value="<% if @ListDist %><%=@ListDist.zd_name%><% end %>"  />
                                        </div>
				</div>
					
			<div class="submit-section">
					<button class="btn btn-primary submit-btn">Save</button>
					<a href="<%=root_url%>zone_district"><button class="btn btn-danger submit-btn m-l-5 " type="button">Quit</button></a>
				</div>
		</div>
                <% end %>
	</div>
	<!-- /Page Content -->
</div>