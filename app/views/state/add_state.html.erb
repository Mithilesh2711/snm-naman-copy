<!-- Page Wrapper -->
<div class="page-wrapper">
	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<div class="row">
						<h3 class="page-title col-md-10">Add State</h3>
					 	<div class="col-md-2 m-b-5 ">
						 		<a href="<%=root_url%>state" class="btn add-btn float-left"><i class="fa fa-arrow-left"></i>Back to List</a>
						 	</div>
				
				</div>
					<%=render'layouts/breadcrumbs'%>
			</div>
		</div>
	</div>
		<!-- /Page Header -->
                <% if flash[:error] %>
                           <div class="alert <% if session[:isErrorhandled].to_i >0 %>alert-danger<% else %>alert-success<% end %>" style="width:900px;" id="successXMessage">
                             <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                             <%= flash[:error] %>
                           </div>
                          <% end %>
                <%= form_tag({:action=>'create'} ,:multipart=>true,:id=>:myforms ) do  %>
                <input type="hidden" name="cur_sts_code" id="cur_sts_code" value="<% if @ListSate %><%=@ListSate.sts_code%><% end %>"/>
                <input type="hidden" name="mid" id="mid" value="<% if @ListSate %><%=@ListSate.id%><% end %>"/>

		<div class="row">
			<div class="col-md-12">
				<div class="form-group row">
					<label class="col-form-label col-md-2">Code <span class="mandatory">*</span></label>
					<div class="col-md-3 info">
						<input type="text" autocomplete="off" class="form-control  " required maxlength="3" name="sts_code" id="sts_code" value="<% if @ListSate %><%=@ListSate.sts_code%><% end %>"/><a href="#"  data-container="body" data-toggle="popover" data-placement="right" data-content="State code allowed 3 Character" data-trigger="focus" ><i class="la la-question-circle-o"></i></a> </div>

					<label class="col-form-label col-md-2">Description  <span class="mandatory">*</span></label>
					<div class="col-md-3">
						<input type="text" autocomplete="off" class="form-control" required maxlength="50" name="sts_description" id="sts_description" value="<% if @ListSate %><%=@ListSate.sts_description%><% end %>"/> </div>
				</div>

				<div class="form-group row">
					<label class="col-form-label col-md-2">Welfare Emp</label>
					<div class="col-md-3">
						<input type="text" autocomplete="off" onkeypress="return isNumberKeys(event);" class="form-control" maxlength="10" name="sts_welfare" id="sts_welfare" value="<% if @ListSate %><%=@ListSate.sts_welfare%><% end %>"/> </div>
					<label class="col-form-label col-md-2">Welfare Empr</label>
					<div class="col-md-3">
						<input type="text" autocomplete="off" onkeypress="return isNumberKeys(event);" class="form-control" maxlength="10" name="sts_welfare_employer" id="sts_welfare_employer" value="<% if @ListSate %><%=@ListSate.sts_welfare_employer%><% end %>"/> </div>
				</div>
				<div class="submit-section">
					<button class="btn btn-primary submit-btn" type="submit">Save</button>
					<a href="<%=root_url%>state"><button class="btn btn-danger submit-btn m-l-5 " type="button">Quit</button></a>
				</div>
			</div>
		</div>
                <% end %>
	</div>
	<!-- /Page Content -->
</div>