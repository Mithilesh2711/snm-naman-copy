<!-- Page Wrapper -->
<div class="page-wrapper">
	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Add Designation</h3>
					<%=render'layouts/breadcrumbs'%>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
                 <% if flash[:error] %>
                           <div class="alert <% if session[:isErrorhandled].to_i >0 %>alert-danger<% else %>alert-success<% end %>" style="width:900px;" id="successXMessage">
                             <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                             <%= flash[:error] %>
                           </div>
                          <% end %>
                <%= form_tag({:action=>'create'} ,:multipart=>true,:id=>:myforms ) do  %>
                <input type="hidden" name="curdesicode" id="curdesicode" value="<% if @ListDepart %><%=@ListDepart.desicode%><% end %>"/>
                <input type="hidden" name="mid" id="mid" value="<% if @ListDepart %><%=@ListDepart.id%><% end %>"/>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group row">
					
					<label class="col-form-label col-md-2">  Designation Code <span class="mandatory">*</span></label>
					<div class="col-md-3">
						<input type="text" readonly required maxlength="30" autocomplete="off" class="form-control" name="desicode" id="desicode" value="<% if @ListDepart %><%=@ListDepart.desicode%><% elsif @lastcodes %><%=@lastcodes%><% end %>"/> </div>
						<label class="col-form-label col-md-2"> Designation Name <span class="mandatory">*</span></label>
					<div class="col-md-3">
						<input type="text" required maxlength="60" autocomplete="off" autofocus="" class="form-control" name="ds_description" id="ds_description" value="<% if @ListDepart %><%=@ListDepart.ds_description%><% end %>"/> </div>
				</div>
                          <div class="form-group row">

					<label class="col-form-label col-md-2">Type <span class="mandatory">*</span></label>
					<div class="col-md-3">
						<select required autocomplete="off" class="form-control" name="ds_type" id="ds_type">
                                                  <option value="">-Select</option>
                                                  <option value="Branch" <% if @ListDepart && @ListDepart.ds_type.to_s == 'Branch' %>selected="selected"<% end %>>Branch</option>
                                                  <option value="Organization" <% if @ListDepart && @ListDepart.ds_type.to_s == 'Organization' %>selected="selected"<% end %>>Organization</option>
                                                  <option value="Sewadar" <% if @ListDepart && @ListDepart.ds_type.to_s == 'Sewadar' %>selected="selected"<% end %>>Sewadar</option>
                                                </select>
                                        </div>
						
				</div>
				
				<div class="submit-section">
					<button class="btn btn-primary submit-btn">Save</button>
					<a href="<%=root_url%>designation"><button class="btn btn-danger submit-btn m-l-5 " type="button">Quit</button></a>
				</div>
			</div>
		</div>
                <% end %>
	</div>
	<!-- /Page Content -->
</div>