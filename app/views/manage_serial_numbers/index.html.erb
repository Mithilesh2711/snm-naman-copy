<!-- Page Wrapper -->
<div class="page-wrapper">
	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Manage Serial Numbers</h3>
					<%=render'layouts/breadcrumbs'%>
				</div>
				
			</div>
		</div>
		<!-- /Page Header -->
                <% if flash[:error] %>
                           <div class="alert <% if session[:isErrorhandled].to_i >0 %>alert-danger<% else %>alert-success<% end %>" style="width:900px;" id="successXMessage">
                             <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                             <%= flash[:error] %>
                           </div>
                          <% end %>
                <%= form_tag({:action=>'create'} ,:multipart=>true,:id=>:myforms ) do  %>
		<div class="row">
			<div class="col-md-12">
				
				<div class="table-responsive">
					<table class="table table-striped  mb-0 ">
									<thead class="new_tblhead">
										<tr>
											
											<th>Master</th>
											<th>Prefix</th>
											<th>Character</th>
											<th>Sample</th>
											
											
										</tr>
									</thead>
									<tbody>
                                                                          <%
                                                                          i = 1
                                                                           if @mstSeriesList.length >0
                                                                            @mstSeriesList.each do |newseries|
                                                                          %>
										<tr>
                                                                                      <input type="hidden" name="sn_type[]" id="sn_type_<%=i%>" value="<%=newseries.sn_type%>"/>
                                                                                      <input type="hidden" name="sn_series_sample[]" id="sn_series_sample_<%=i%>" value="<%=newseries.sn_series_sample%>"/>
											<td><%=newseries.sn_type%></td>
											<td><input type="text" onchange="generate_serial_numbers(<%=i%>);" class="wd65 form-control-sm" name="sn_prefix[]" id="sn_prefix_<%=i%>" value="<%=newseries.sn_prefix%>" /></td>
											<td><input type="text"  onchange="generate_serial_numbers(<%=i%>);" class="form-control-sm" name="sn_length[]" id="sn_length_<%=i%>" value="<%=newseries.sn_length%>"/></td>
											
											<td id="snseries_sample_<%=i%>"><%=newseries.sn_series_sample%></td>
											
										
										</tr>
                                                                                <%
                                                                                  i +=1
                                                                                   end
                                                                                 end
                                                                               %>
									
										
									
										
									</tbody>
								</table>
				</div>
                          <div class="submit-section">
					<button class="btn btn-primary submit-btn">Save</button>
					
				</div>
			</div>

		</div>
                <% end %>
	</div>
	<!-- /Page Content -->
</div>