<!-- Page Wrapper -->
<div class="page-wrapper">
	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Add Products</h3>
					 <%=render'layouts/breadcrumbs'%>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
                 <% if flash[:error] %>
                           <div class="alert <% if session[:isErrorhandled].to_i >0 %>alert-danger<% else %>alert-success<% end %>" style="width:900px;" id="successXMessage">
                             <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                             <%= flash[:error] %>
                           </div>
                          <% end %>
                <%= form_tag({:action=>'create'} ,:multipart=>true,:id=>:myforms ) do  %>
                <input type="hidden" id="userXRoot" value="<%=root_url%>"/>
                <input type="hidden" id="requestserver" name="requestserver" value="Y"/>
                <input type="hidden" id="mid" name="mid" value="<% if @ListBank%><%=@ListBank.id%><% end %>"/>
                <input type="hidden" id="cur_bank" name="cur_bank" value="<% if @ListBank%><%=@ListBank.pr_name%><% end %>"/>
                <input type="hidden" name="currentimg" id="currentimg" value="<% if @seawdarsobj %><%=@seawdarsobj.pr_img%><% end %>"/>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group row">

                                        <label class="col-form-label col-md-2">Product Code  <span class="mandatory">*</span></label>
					<div class="col-md-3">
                                          <input type="text" readonly required autocomplete="off" maxlength="20" class="form-control" name="pr_code" id="pr_code" value="<% if @ListBank%><%=@ListBank.pr_code%><% elsif @Lastcode %><%=@Lastcode%><% end %>"/>
						 </div>
						<label class="col-form-label col-md-2">Product Name  <span class="mandatory">*</span></label>
					<div class="col-md-3">
                                          <input type="text" required autocomplete="off" maxlength="60" class="form-control" name="pr_name" id="pr_name" value="<% if @ListBank%><%=@ListBank.pr_name%><% end %>"/>
						 </div>
					</div>					
				
				<div class="form-group row">
					<label class="col-form-label col-md-2">Opening Balance  <span class="mandatory">*</span></label>
					<div class="col-md-3">
						<input type="text" autocomplete="off" maxlength="20" class="form-control" name="pr_ob" id="pr_ob" value="<% if @ListBank%><%=@ListBank.pr_ob%><% end %>"/> </div>
						<label class="col-form-label col-md-2">Closing Balance  <span class="mandatory">*</span></label>
					<div class="col-md-3">
						<input type="text" autocomplete="off" maxlength="250" class="form-control" name="pr_cb" id="pr_cb" value="<% if @ListBank%><%=@ListBank.pr_cb%><% end %>"/> </div>
					</div>					
				
				<div class="form-group row">
				    <label class="col-form-label col-md-2">Image<span class="mandatory">*</span></label>
					<div class="col-md-3">
					   
						<input type="file" class="form-control" name="pr_img" id="pr_img" /> </div>
				</div>
				<div class="submit-section">
					<button class="btn btn-primary submit-btn">Save</button>
					<a href="<%=root_url%>products"><button class="btn btn-danger submit-btn m-l-5  " type="button">Quit</button></a>
				</div>
			</div>
		</div>
                <%
                 end
               %>
	</div>
	<!-- /Page Content -->
</div>