<!-- Page Wrapper -->
<div class="page-wrapper">
	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Add HO Sub Location</h3>
					<%=render'layouts/breadcrumbs'%>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
                 <% if flash[:error] %>
                           <div class="alert <% if session[:isErrorhandled].to_i >0 %>alert-danger<% else %>alert-success<% end %>" style="width:900px;" id="successXMessage">
                             <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                             <%= flash[:error] %>
                           </div>
                          <% end %>
                <%= form_tag({:action=>'create'} ,:multipart=>true,:id=>:myforms ) do  %>
                <input type="hidden" name="cur_description" id="cur_description" value="<% if @ListDepart %><%=@ListDepart.sl_description%><% end %>"/>
                <input type="hidden" name="mid" id="mid" value="<% if @ListDepart %><%=@ListDepart.id%><% end %>"/>
                <div class="row">
			<div class="col-md-12">
				<div class="form-group row">


						<label class="col-form-label col-md-2"> Location <span class="mandatory">*</span></label>
					<div class="col-md-3">
						<select autocomplete="off" autofocus="" required class="form-control" name="sl_locid" id="sl_locid" >
                                                     <option value="">-Select-</option>
                                                     <%
                                                     if @myheadoffice && @myheadoffice.length >0
                                                      @myheadoffice.each do |locs|
                                                     %>
                                                     <option value="<%=locs.id%>" <% if @ListDepart && @ListDepart.sl_locid.to_i == locs.id.to_i %>selected="selected"<% end %>><%=locs.hof_description%></option>
                                                     <%
                                                      end
                                                    end
                                                    %>
                                                </select>
                                        </div>
				</div>

				
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group row">
					
					
						<label class="col-form-label col-md-2"> Description<span class="mandatory">*</span></label>
					<div class="col-md-3">
						<input type="text" required maxlength="140" autocomplete="off" autofocus="" class="form-control" name="sl_description" id="sl_description" value="<% if @ListDepart %><%=@ListDepart.sl_description%><% end %>"/> </div>
				</div>
				
				<div class="submit-section">
					<button class="btn btn-primary submit-btn">Save</button>
					<a href="<%=root_url%>head_office"><button class="btn btn-danger submit-btn m-l-5 " type="button">Quit</button></a>
				</div>
			</div>
		</div>
                <% end %>
	</div>
	<!-- /Page Content -->
</div>